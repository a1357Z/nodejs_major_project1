<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title%></title>
    <link rel="stylesheet" href="/css/layout.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <%- style %>
</head>
<body>
    <%-include ('_header')%>
    
    <%- body%>
    <%-include ('_footer')%>
    <%- script %>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@500&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
    <script src="https://kit.fontawesome.com/3452448514.js" crossorigin="anonymous"></script>
    <script>
        <%if(flash.success && flash.success.length > 0){%>
            new Noty(
                {text:"<%=flash.success%>", type : 'success', theme : 'relax', layout : 'topRight',timeout : 1500}
            ).show()
        <%}%>

        <%if(flash.error && flash.error.length > 0){%>
            new Noty(
                {text:"<%=flash.error%>", type : 'error', theme : 'relax', layout : 'topRight',
                timeout : 1500,
                template: '<div class="noty_message"><span class="noty_text"></span></div>'
            }
            ).show()
        <%}%>
    </script>
</body>
</html>